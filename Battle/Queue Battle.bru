meta {
  name: Queue Battle
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/battle/queue
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "teamId": "{{teamId}}",
    "mode": "casual"
  }
}

script:post-response {
  if (res.status === 201) {
    bru.setEnvVar("battleId", res.body.battleId);
  }
}
